<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_create_channel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="创建通知渠道" />

    <Button
        android:id="@+id/btn_read_channel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="读取通知渠道信息" />

    <Button
        android:id="@+id/btn_open_channel_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打开渠道设置" />

    <Button
        android:id="@+id/btn_delete_channel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除渠道" />


    <Button
        android:id="@+id/btn_create_channel_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="创建渠道组" />

    <Button
        android:id="@+id/btn_delete_channel_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除渠道组" />


    <Button
        android:id="@+id/btn_create_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="创建通知" />

    <Button
        android:id="@+id/btn_update_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更新通知" />


    <Button
        android:id="@+id/btn_delete_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="移除通知" />

</LinearLayout>